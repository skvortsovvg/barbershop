<h2>Записаться</h2>
<p>Здесь вы можете записаться к нам на прием!</p>
</br>
<script type="text/javascript">
  $(function(){
    $('#color').simplecolorpicker();  
  })  
</script>
<form action="/visit" method="POST">
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="введите ваше имя", value="<%=params[:username] if params[:username]%>">
  </div>
  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phoneno" type="text" class="form-control" placeholder="введите номер телефона">
  </div>
  <div class="form-group">
    <label>Время визита</label>
    <input name="plantime" type="text" class="form-control" placeholder="введите желаемое время">
  </div>
 
  <div class="form-group">
    <label>Парикмахер</label>
    <select name="barber" class="form-control input-sm">
    	<option disabled selected="selected">Выберите парикмахера</option>
    	<option <%= params[:barber] == 'Walter White' ? 'selected' : '' %>>Walter White</option>
		  <option <%= params[:barber] == 'Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option>
		  <option <%= params[:barber] == 'Gus Fring' ? 'selected' : '' %>>Gus Fring</option>
    </select>
  </div>
 
 <select id="color", name="color">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>
